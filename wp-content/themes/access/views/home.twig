{% extends "base.twig" %}

{% block body_class %}
  home
{% endblock %}

{% block content %}
  <main class="main-content" id="content">
    <div class="home-header">
      <div class="hero">
        <div class="hero-inner">
          <h2 class="hero-title type-h1">{{ post.hero_headline }}</h2>
          <div class="hero-touts">
            {% for tout in post.get_field('hero_touts') %}
            <div class="hero-tout">
              {% if tout.title %}<h3 class="hero-tout-title">{{ tout.title }}</h3>{% endif %}
              {% if tout.body %}<div class="hero-tout-body">
                {{ tout.body }}
              </div>{% endif %}
              {% if tout.link_text %}<div class="hero-tout-cta">
                <a class="btn btn-{{ tout.link_type}}{% if tout.link_arrow %} btn-next{% endif %}" href="{{ tout.link_url}}">{{ tout.link_text}}</a>
              </div>{% endif %}
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
    <div class="home-body">
      {% if homepage_touts %}
      <div class="fyi">
        <h2 class="fyi-title type-h5">{{ post.hero_touts_heading }}</h2>
        <div class="fyi-touts">
          {% for tout in homepage_touts %}
          <div class="fyi-tout">
            {% if tout.tout_title %}<h3 class="fyi-tout-title type-h4">{{ tout.tout_title }}</h3>{% endif %}
            {% if tout.link_text %}<div class="fyi-tout-cta"><a href="{{ tout.link_url }}"{% if tout.link_new_window %} target="_blank" rel="noopener noreferrer"{% endif %}>{{ tout.link_text }}</a></div>{% endif %}
          </div>
          {% endfor %}
        </div>
      </div>
      {% endif %}
      <div class="program-gallery program-cards">
        <h2 class="program-gallery-title type-h3">{{ post.featured_programs_heading }}</h2>
        {% if post.featured_programs_subheading | length %}<h3 class="program-gallery-subtitle type-h4">{{ post.featured_programs_subheading }}</h3>{% endif %}
        <div class="program-gallery-touts">
          {% include 'partials/post-teaser.twig' with {'short_post': true, 'posts': post.get_field('featured_programs')} %}
        </div>
      </div>
      {% if homepage_alert %}
      <div class="alert status-{{ homepage_alert.alert_color }}">
        <div class="alert-icon">
          <svg class="icon icon-{{ homepage_alert.alert_icon }}">
            <use xlink:href="#icon-{{ homepage_alert.alert_icon }}"></use>
          </svg>
        </div>
        <div class="alert-body">
          {{ homepage_alert.alert_content }}
        </div>
      </div>
      {% endif %}
      <footer class="content-footer">
        {% if post.contact_us_cta and post.contact_us_link %}
        <div class="contact">
          <h2 class="type-h4">{{ post.contact_us_heading }}</h2>
          <a class="btn btn-primary" href="{{ post.contact_us_link }}">
            <svg class="icon icon-contact">
              <use xlink:href="#icon-contact"></use>
            </svg> {{ post.contact_us_cta }}
          </a>
        </div>
        {% endif %}
      </footer>
    </div>
  </main>
{% endblock %}
