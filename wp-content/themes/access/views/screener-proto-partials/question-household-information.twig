{% set headOfHouseholdRelationOptions = [
  {"value": "", "text": "Click to select relationship"},
  {"value": "Child", "text": "Child"},
  {"value": "FosterChild", "text": "Foster Child"},
  {"value": "StepChild", "text": "Step-child"},
  {"value": "Grandchild", "text": "Grandchild"},
  {"value": "Spouse", "text": "Spouse"},
  {"value": "Parent", "text": "Parent"},
  {"value": "FosterParent", "text": "Foster Parent"},
  {"value": "StepParent", "text": "Step-parent"},
  {"value": "Grandparent", "text": "Grandparent"},
  {"value": "SisterBrother", "text": "Sister/Brother"},
  {"value": "StepSisterStepBrother", "text": "Step-sister/Step-brother"},
  {"value": "BoyfriendGirlfriend", "text": "Boyfriend/Girlfriend"},
  {"value": "DomesticPartner", "text": "Domestic Partner"},
  {"value": "Unrelated", "text": "Unrelated"},
  {"value": "Other", "text": "Related in some other way"}
] %}

<fieldset class="d-block w-100">

  <div class="bg-grey-lightest b-bottom b-4 b-white p-relative" id="question-household-information">

    <div class="bg-blue-light ui-overlay js-toggle-question hidden"></div>

    <div class="p-relative">

      <a class="{{styles.questions}}" data-js="question" href="#question-household-information">
        {{ __('Household Information', 'accessnyc-screener') }}
      </a>

      <div class="js-toggle-question hidden p-horizontal-2 p-bottom-2"> {# hidden #}

        <div class="m-bottom-2">
          <label class="{{styles.labels}}">
            {{ __('Including you, how many people are in your household?', 'accessnyc-screener') }}
          </label>
          <div>
            <input type="number" name="Household.members" min="1" max="8" value="1" required
              data-type="integer"
              data-object="household"
              data-key="members"
              v-on:change="populate">
          </div>
        </div>

        <div>
          <label class="{{styles.labels}}">
            {{ __('Are you the head of household?', 'accessnyc-screener') }}
          </label>

          <h4 class="{{styles.explainations}}">{{ __('What does the head of household mean?', 'accessnyc-screener') }}</h4>
          <p>{{ __('The head of household is the person who can represent everyone in your family and pays most of the familyâ€™s expenses. If you pay more than half the cost for your home this year, you are the head of household.', 'accessnyc-screener') }}</p>

          <div class="screener-radio-buttons">
            <label class="screener-radio screener-label">
              <input class="js-screener-toggle screener-radio-input sr-only" value="true" type="radio" name="Person[0].headOfHousehold" checked
                data-object="people"
                data-index="0"
                data-key="headOfHousehold"
                data-type="boolean"
                data-hides=".js-toggle-head-of-household"
                v-on:change="setAttr">
              <span class="screener-radio-label">{{ __('Yes', 'accessnyc-screener') }}</span>
            </label>
            <label class="screener-radio screener-label">
              <input class="js-screener-toggle screener-radio-input sr-only" value="false" type="radio" name="Person[0].headOfHousehold"
                data-object="people"
                data-index="0"
                data-key="headOfHousehold"
                data-type="boolean"
                data-shows=".js-toggle-head-of-household"
                v-on:change="setAttr">
              <span class="screener-radio-label">{{ __('No', 'accessnyc-screener') }}</span>
            </label>
          </div>
        </div>

        <div v-if="!people[0]._attrs.headOfHousehold" class="m-top-2">
          <label class="screener-label" for="hoh-relation">
            {{ __('What is your relationship to the head of the household? I am their:', 'accessnyc-screener') }}
          </label>
          <div>
            <select class="screener-select" name="Person[0].headOfHouseholdRelation" required
              v-model="people[0]._attrs.headOfHouseholdRelation">
              {% for option in headOfHouseholdRelationOptions %}
              <option value="{{ option.value }}">
                {{ __(option.text, 'accessnyc-screener') }}
              </option>
              {% endfor %}
            </select>
          </div>
        </div>

      </div>

    </div>

  </div>

</fieldset>
