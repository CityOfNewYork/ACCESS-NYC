  <div class="bg-grey-lightest b-bottom b-4 b-white p-relative" id="question-household-total-savings">

    <div class="bg-blue-light ui-overlay js-toggle-question hidden"></div>

    <div class="p-relative">

      <a class="{{styles.questions}}" data-js="question" href="#question-household-total-savings">
        {{ __('Household Total Savings', 'accessnyc-screener') }}
