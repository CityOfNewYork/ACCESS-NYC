<div class="c-filter">
  <a href="#program-options" class="c-filter__header" data-js="filter">
    {% if not programCategory | length %}{{__('All Programs', 'accessnyctheme')}}{% else %}{{ programCategory.name }}{% endif %}
  </a>
  <ul id="program-options" class="c-filter__list">
    {% if not programCategory | length %}
    <li><span class="c-filter__item">{{__('All Programs', 'accessnyctheme')}}</span></li>
    {% else %}
    <li><a class="c-filter__item" href="{{ url_base }}/programs">{{__('All Programs', 'accessnyctheme')}}</a></li>
    {% endif %}

    {% for category in categories %}
    {% if category.slug == programCategory.slug %}
    <li><span class="c-filter__item">{{ category.name }}</span></li>
    {% else %}
    <li><a class="c-filter__item" href="{{ url_base }}/programs/?program_cat={{ category.slug }}">{{ category.name }}</a></li>
    {% endif %}
    {% endfor %}
  </ul>
</div>