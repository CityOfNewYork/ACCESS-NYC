
{% set shownHowToApply = false %}

{% set helpMethods = [
  'get_help_online',
  'get_help_by_email',
  'get_help_by_calling_311',
  'get_help_by_calling_other_than_311',
  'get_help_in_person'
] %}

{% set shownSections = post.get_field('show_sections') %}

<article class="mb-4 print:pb-4 print:border-b" data-code="{{ post.program_code }}">
  <div class="c-card items-stretch bg-color-grey-lightest p-4 print:flex print:p-0 print:bg-color-transparent">
    <div class="c-card__icon-large print:hidden">
      {% include 'partials/category-icon.twig' with {width: '80px', height: '80px', target: '_blank'} %}
    </div>

    <div class="pr-2 hidden print:inline-block" aria-hidden="true">
      {% include 'partials/category-icon.twig' with {width: '44px', height: '44px', target: '_blank'} %}
    </div>

    <div class="c-card__body w-100 print:p-0">
      <a href="{{ post.get_permalink }}" target="_blank" rel="noopener noreferrer">
        <h3 class="c-card__title text-color-blue-dark">
          {{ post.plain_language_program_name }}
        </h3>
      </a>

      {% if not short_post %}
      <p class="c-card__subtitle text-color-grey-mid">{{ post.program_name }} {% if post.program_acronym != '' %}({{ post.program_acronym }}){% endif %}</p>
      {% endif %}

      {% for section in shownSections %}
      {% if section.value == 'how-it-works' %}
      {{ post.get_field('program_description') }}
      {% endif %}
      {% endfor %}

      {% if post.terms('outreach') %}
      <h3 class="type-h4 print:hidden text-color-blue-dark">
        {{ post.terms('outreach') | join(', ') }}
      </h3>
      {% endif %}

      {% if post.heads_up | length %}

      <div class="print:mb-2">
        <h3 class="type-h4 text-color-blue-dark">{{__('Heads Up', 'accessnyc-program-detail')}}</h3>
        <div class="c-checklist" id="heads-up-{{ post.program_code }}">
          {{ post.get_field('heads_up') }}
        </div>
        {% for section in shownSections %}{% if section.value == 'what-you-need-to-include' %}
        <p class="print:hidden m-0">
          <a class="btn btn-secondary btn-next" href="{{ post.get_permalink }}?step=what-you-need-to-include" target="_blank" rel="noopener noreferrer">See a full list of required documents</a>
        </p>
        {% endif %}{% endfor %}
      </div>
      {% endif %}
    </div>

    <div class="flex flex-col justify-between print:hidden">
      <div style="width:232px" class="pb-2">
        <div id="remove-{{ post.program_code }}">
          <a class="btn btn-primary btn-small block" href="#confirm-{{ post.program_code }}"
            data-js="simple-toggle"
            data-hide="#remove-{{ post.program_code }}">
            {{ __('Remove Program', translationID) }}
          </a>
        </div>
        <div id="confirm-{{ post.program_code }}" class="hidden" aria-hidden="true">
          <p class="type-small text-center text-color-grey-mid">{{ __('Are you sure?', translationID) }}</p>
          <div class="flex">
            <a class="flex-1 btn btn-primary btn-small"
              data-js="remove-program, track"
              data-remove-code="{{ post.program_code }}"
              data-track-key="Results: Remove Program"
              data-track-data='[{"DCS.dcsuri": "{{ post.slug }}/remove"}]'>{{ __('Remove', translationID) }}</a>
            <a class="flex-1 btn btn-secondary btn-small ml-2" href="#remove-{{ post.program_code }}"
              data-js="simple-toggle"
              data-hide="#confirm-{{ post.program_code }}">{{ __('Keep', translationID) }}</a>
          </div>
        </div>
      </div>

      <div>
        <a class="btn-toggle btn" href="#program-detail-{{ post.program_code }}"
          data-js="simple-toggle, track"

          data-track-key="Results: Learn More"
          data-track-data='[{"DCS.dcsuri": "{{ post.slug }}/learn-more"}]'>
          {{ __('Learn More', translationID) }}
        </a>
      </div>
    </div>
  </div>

  <div class="hidden print:active" id="program-detail-{{ post.program_code }}">
    <div class="flex p-4 print:p-0">
      <div class="print:hidden" aria-hidden="true">
        <div style="width:80px;height:80px;">&nbsp;</div>
      </div>

      <div class="pr-2 hidden print:inline-block" aria-hidden="true">
        <div style="width:44px;height:44px;">&nbsp;</div>
      </div>

      <div class="w-full p-left print:p-0">
        {% for section in shownSections %}
        {% if section.value == 'how-to-apply' %}
        <div class="mb-4">
          <h3 class="text-color-blue-dark">{{__('How to apply', 'accessnyc-program-detail')}}</h3>

          {# Online #}
          {% if post.how_to_apply_or_enroll_online != '' %}
            {% include 'components/accordion.twig' with {this: {
                id: 'apply-online-' ~ post.program_code,
                active: false,
                header: __('Apply online', 'accessnyc-program-detail'),
                body: post.get_field('how_to_apply_or_enroll_online'),
                cta: post.apply_online_call_to_action ? {
                  target: '_blank',
                  rel: 'noopener noreferrer',
                  href: post.url_of_online_application,
                  text: post.apply_online_call_to_action
                } : false
              }
            } only %}
          {% endif %}

          {# By Mail #}
          {% if post.how_to_apply_or_enroll_by_mail != '' %}
            {% include 'components/accordion.twig' with {this: {
                id: 'apply-mail-' ~ post.program_code,
                active: false,
                header: __('Apply by mail', 'accessnyc-program-detail'),
                body: post.get_field('how_to_apply_or_enroll_online'),
                cta: post.apply_by_mail_call_to_action ? {
                  target: '_blank',
                  rel: 'noopener noreferrer',
                  href: post.url_of_pdf_application_forms ?? post.application_forms_pdfs,
                  text: post.apply_by_mail_call_to_action
                } : false
              }
            } only %}
          {% endif %}

          {# By Phone #}
          {% if post.how_to_apply_or_enroll_by_phone != '' %}
            {% include 'components/accordion.twig' with {this: {
                id: 'apply-by-phone-' ~ post.program_code,
                active: false,
                header: __('Apply by phone', 'accessnyc-program-detail'),
                body: post.get_field('how_to_apply_or_enroll_by_phone') ~
                      post.get_field('phone_numbers')
              }
            } only %}
          {% endif %}

          {# In Person #}
          {% if post.how_to_apply_or_enroll_in_person != '' %}
            {% include 'components/accordion.twig' with {this: {
                id: 'apply-in-person-' ~ post.program_code,
                active: false,
                header: __('Apply in person', 'accessnyc-program-detail'),
                body: post.get_field('how_to_apply_or_enroll_in_person'),
                cta: post.office_locations_url and post.apply_in_person_call_to_action ? {
                  target: '_blank',
                  rel: 'noopener noreferrer',
                  href: post.office_locations_url,
                  text: post.apply_in_person_call_to_action|striptags
                } : false
              }
            } only %}
          {% endif %}
        </div>
        {% endif %}
        {% endfor %}

        <div>
          <h3 class="text-color-blue-dark">{{__('More ways to get help with this program', 'accessnyc-program-detail')}}</h3>
          {% for method in helpMethods %}
          {% if post.get_field(method) %}
          <div>
            {{ post.get_field(method) }}
          </div>
          {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  {% if post.heads_up | length %}
  <style>
    {% for icon in post.get_field('heads_up_icons') %}
    .c-checklist#heads-up-{{ post.program_code }} ul li:nth-child({{ loop.index }}) {
      background-image: url({{ icon.icon.url }});
    }
    {% endfor %}
  </style>
  {% endif %}
</article>
