{#
  Setting a length here to strip the language code from the category slug
  and use a single sprite image for all languages.
#}
{% for category in post.terms('programs') %}
  {% if language_code != 'en' %}
    {% set langLength = (language_code | length + 1) * -1 %}
    {% set catSlug = category.slug | slice(0, langLength) %}
  {% else %}
    {% set catSlug = category.slug %}
  {% endif %}
  <a href="{{ post.get_permalink }}">
    <svg class="icon icon-card-{{ catSlug }}" width="{{ width }}" height="{{ height }}">
      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-card-{{ catSlug }}"></use>
    </svg>
  </a>
{% endfor %}
