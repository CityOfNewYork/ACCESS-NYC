{% set rentingOptions = [
  {'value': 'livingRenting', 'text': 'Renting'},
  {'value': 'livingOwner', 'text': 'You or a household member owns the home or apartment'},
  {'value': 'livingStayingWithFriend', 'text': 'Staying with a friend'},
  {'value': 'livingHotel', 'text': 'In a hotel'},
  {'value': 'livingShelter', 'text': 'In a shelter or homeless'}
] %}

{% set housingOptions = [
  {'value': '', 'text': 'Click to select a rental type'},
  {'value': 'Condo', 'text': 'Condo'},
  {'value': 'FamilyHome', 'text': 'Family Home'},
  {'value': 'HDFC', 'text': 'Housing Development Fund Company (HDFC) Cooperative'},
  {'value': 'LimitedDividendDevelopment', 'text': 'Limited Dividend development apartments'},
  {'value': 'MitchellLama', 'text': 'Mitchell-Lama apartments'},
  {'value': 'NYCHA', 'text': 'NYCHA Housing'},
  {'value': 'MarketRate', 'text': 'Non-Regulated or Market Rate apartment'},
  {'value': 'RedevelopmentCompany', 'text': 'Redevelopment Company apartments'},
  {'value': 'RentControlled', 'text': 'Rent controlled or rent stabilized apartment'},
  {'value': 'RentRegulatedHotel', 'text': 'Rent Regulated Hotel/Single Room'},
  {'value': 'Section213', 'text': 'Section 213 apartments'},
  {'value': '', 'text': 'None of these apply'}
] %}

<fieldset class="d-block w-100 p-bottom">

  <div class="bg-grey-lightest b-bottom b-4 b-white p-relative" id="question-housing-situation">

    <div class="bg-blue-light ui-overlay js-toggle-question hidden"></div> {# hidden #}

    <div class="p-relative">

      <a class="{{styles.questions}}" data-js="question" href="#question-housing-situation">
        {{ __('Housing Situation', 'accessnyc-screener') }}
        <svg class="{{styles.warning}}" role="img" aria-label="{{ __('Some fields are invalid', 'accessnyc-screener') }}"
          v-if="errors.all('HousingSituation').length > 0">
          <title>{{ __('Some fields are invalid', 'accessnyc-screener') }}</title>
          <use xlink:href="#icon-warning"></use>
        </svg>
      </a>

      <div class="js-toggle-question p-horizontal-2 p-bottom-2 hidden"> {# hidden #}

        <label class="{{styles.labels}}">
          {{ __('What is your current housing situation?', 'accessnyc-screener') }}
        </label>
        <div class="screener-checkboxes js-screener-checkbox-group">
          {% for option in rentingOptions %}
          <label class="styled-checkbox screener-checkbox screener-checkboxes-program screener-label">
            <input type="checkbox" name="Household.{{option.value}}" value="1"
              data-type="boolean"
              data-object="household"
              data-key="{{option.value}}"
              v-bind:checked="household._attrs.{{option.value}}"
              v-on:change="setHousing($event);">
            <span class="styled-checkbox-label">{{ __(option.text, 'accessnyc-screener') }}</span>
          </label>
          {% endfor %}
          <label class="styled-checkbox screener-checkbox screener-checkboxes-program screener-label">
            <input type="checkbox" name="Household.livingPreferNotToSay" value="1"
              data-type="boolean"
              data-object="household"
              data-key="livingPreferNotToSay"
              data-keys="{% for option in rentingOptions %}{{option.value}},{% endfor %}"
              v-bind:checked="household._attrs.livingPreferNotToSay"
              v-on:change="setHousing($event);">
            <span class="styled-checkbox-label">{{ __('Prefer not to say', 'accessnyc-screener') }}</span>
          </label>
        </div>

        <div v-if="household._attrs.livingRenting">

          <div class="m-top" data-scope="_household">
            <label class="{{styles.labels}}" for="housing-livingRentalType">
              {{ __('Which type of rental do you live in?', 'accessnyc-screener') }}
              <span class="c-red">*</span>
            </label>
            <div class="screener-question-container"
              v-bind:class="{'error': errors.has('HousingSituation.Household.livingRentalType')}">
              <div class="error-message" v-if="errors.has('HousingSituation.Household.livingRentalType')">
                {{ __('Please select a rental type.', 'accessnyc-screener') }}
              </div>
              <select id="housing-livingRentalType" class="screener-select js-screener-toggle" name="Household.livingRentalType" required
                data-val="livingRentalType"
                data-toggles="#screener-lease-owner"
                data-vv-scope="HousingSituation"
                v-model="household._attrs.livingRentalType"
                v-validate="{required: true}">
                {% for option in housingOptions %}
                <option value="{{option.value}}">{{ __(option.text, 'accessnyc-screener') }}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="m-top-2 js-screener-checkbox-group hidden" id="screener-lease-owner">

            <div v-if="singleOccupant()">

              <label class="{{styles.labels}}">
                {{ __('Are you on the lease?', 'accessnyc-screener') }}
              </label>
              <div class="screener-radio-buttons m-bottom">
                <label class="screener-radio screener-label">
                  <input class="js-screener-toggle screener-radio-input sr-only" value="true" type="radio" name="Person[0].livingRentalOnLease" id="person-0-livingRentalOnLease-true"
                    data-type="boolean"
                    data-object="people"
                    data-key="livingRentalOnLease"
                    data-index="0"
                    v-bind:checked="people[0]._attrs.livingRentalOnLease"
                    v-on:change="setAttr">
                  <span class="screener-radio-label">{{ __('Yes', 'accessnyc-screener') }}</span>
                </label>
                <label class="screener-radio screener-label">
                  <input class="js-screener-toggle screener-radio-input sr-only" value="false" type="radio" name="Person[0].livingRentalOnLease" id="person-0-livingRentalOnLease-false"
                    data-type="boolean"
                    data-object="people"
                    data-key="livingRentalOnLease"
                    data-index="0"
                    v-on:change="setAttr">
                  <span class="screener-radio-label">{{ __('No', 'accessnyc-screener') }}</span>
                </label>
              </div>

            </div>
            <div v-else>

              <label class="{{styles.labels}}">
                {{ __('Who is on the lease?', 'accessnyc-screener') }}
              </label>
              <div class="screener-question-container"
                v-bind:class="{'error': errors.has('HousingSituation.Person.livingRentalOnLease')}">
                <div class="error-message"
                  v-if="errors.has('HousingSituation.Person.livingRentalOnLease')">
                    {{ __('Please select at least one person who is on the lease.', 'accessnyc-screener') }}
                </div>
                <label class="styled-checkbox screener-checkbox screener-label"
                  v-for="(p, personIndex) in people">
                  <input type="checkbox" value="true"
                    data-type="boolean"
                    data-object="people"
                    data-key="livingRentalOnLease"
                    data-vv-scope="HousingSituation"
                    v-validate="{required: true}"
                    v-bind:data-index="personIndex"
                    v-bind:name="'Person.livingRentalOnLease'"
                    v-bind:checked="p._attrs.livingRentalOnLease"
                    v-on:change="setAttr">
                  <span class="styled-checkbox-label">
                    <personlabel v-bind:index="personIndex" v-bind:person="p._attrs"></personlabel>
                  </span>
                </label>
              </div>

            </div>

          </div>

        </div>

        <div class="m-top-2" v-if="household._attrs.livingOwner">

          <div v-if="singleOccupant()">

            <label class="{{styles.labels}}">
              {{ __('Are you the owner?', 'accessnyc-screener') }}
            </label>
            <div class="screener-radio-buttons m-bottom">
              <label class="screener-radio screener-label" for="person-0-livingOwnerOnDeed-true">
                <input class="js-screener-toggle screener-radio-input sr-only" value="true" type="radio" name="Person[0].livingOwnerOnDeed" id="person-0-livingOwnerOnDeed-true"
                  data-type="boolean"
                  data-object="people"
                  data-key="livingOwnerOnDeed"
                  data-index="0"
                  v-bind:checked="people[0]._attrs.livingOwnerOnDeed"
                  v-on:change="setAttr">
                <span class="screener-radio-label">{{ __('Yes', 'accessnyc-screener') }}</span>
              </label>
              <label class="screener-radio screener-label" for="person-0-livingOwnerOnDeed-false">
                <input class="js-screener-toggle screener-radio-input sr-only" value="false" type="radio" name="Person[0].livingOwnerOnDeed" id="person-0-livingOwnerOnDeed-false"
                  data-type="boolean"
                  data-object="people"
                  data-key="livingOwnerOnDeed"
                  data-index="0"
                  v-on:change="setAttr">
                <span class="screener-radio-label">{{ __('No', 'accessnyc-screener') }}</span>
              </label>
            </div>

          </div>
          <div v-else>

            <label class="{{styles.labels}}">
              {{ __('Who is the owner?', 'accessnyc-screener') }}
            </label>
            <div class="screener-question-container"
              v-bind:class="{'error': errors.has('Person.livingOwnerOnDeed')}">
              <div class="error-message"
                v-if="errors.has('Person.livingOwnerOnDeed')">
                  {{ __('Please select at least one owner.', 'accessnyc-screener') }}
              </div>
              <label class="styled-checkbox screener-checkbox screener-label"
                v-for="(p, personIndex) in people">
                <input type="checkbox" value="true" name="livingOwnerOnDeed"
                  data-type="boolean"
                  data-object="people"
                  data-key="livingOwnerOnDeed"
                  v-validate="{required: true}"
                  v-bind:data-index="personIndex"
                  v-bind:name="'Person.livingOwnerOnDeed'"
                  v-bind:checked="p._attrs.livingOwnerOnDeed"
                  v-on:change="setAttr">
                <span class="styled-checkbox-label">
                  <personlabel v-bind:index="personIndex" v-bind:person="p._attrs"></personlabel>
                </span>
              </label>
            </div>

          </div>

        </div>

      </div>

    </div>

  </div>

</fieldset>
