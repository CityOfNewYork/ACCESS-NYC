<fieldset class="d-block w-100 p-bottom">

  <div class="bg-blue-light b-bottom b-4 b-white p-relative" id="question-confirmation">

    <div class="bg-blue-light ui-overlay"></div>

    <div class="p-relative">

      <a class="{{styles.questions}}" href="#question-confirmation">
        {{ __('Is all of your information correct?', translationID) }}
      </a>

      <div class="p-horizontal-2 p-bottom-2">

        {# Client Needs #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Looking for help with', translationID) }}
            <a class="m-horizontal" data-js="question" href="#question-client-needs" v-on:click="track('Confirmation: Edit', [{'DCS.dcsuri': 'question-client-needs/edit'}])">{{ __('Edit', translationID) }}</a>
          </h3>

          <div class="recap-program-categories" v-if="client._attrs.programCategories.length">

            <div class="program-category" v-for="(c, index) in client._attrs.programCategories">
              <div class="program-icon">
                <span class="icon">
                  <svg v-bind:class="'icon icon-' + c">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" v-bind:xlink:href="'#icon-' + c"></use>
                  </svg>
                </span>
              </div>
              <div class="program-card-body">v{ localString(c) }</div>
            </div>

          </div><div v-else>

            <p class="text-small">
              {{ __('No categories selected.', translationID) }}
            </p>

          </div>

        </div>

        <hr class="screener-divider">

        {# Client Services #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Currently Enrolled Programs', translationID) }}
            <a class="m-horizontal" data-js="question" href="#question-client-services" v-on:click="track('Confirmation: Edit', [{'DCS.dcsuri': 'question-client-services/edit'}])">{{ __('Edit', translationID) }}</a>
          </h3>

          <div class="recap-household-member-detail" v-if="client._attrs.programsEnrolled.length > 0" >
            <ul class="recap-detail-info w-100">
              <li class="m-bottom" v-for="(program, index) in client._attrs.programsEnrolled">
                  v{ localString(program) } <button type="button" class="btn-text btn-link p-horizontal" v-on:click="client._attrs.programsEnrolled.splice(index, 1)">{{ __('Remove', translationID) }}</button>
              </li>
            </ul>
          </div><div v-else>

            <p class="text-small">
              {{ __('No programs selected.', translationID) }}
            </p>

          </div>

        </div>

        <hr class="screener-divider">

        {# Client Basics #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Client information', translationID) }}
            <a class="m-horizontal" data-js="question" href="#question-client-basics" v-on:click="track('Confirmation: Edit', [{'DCS.dcsuri': 'question-client-basics/edit'}])">{{ __('Edit', translationID) }}</a>
          </h3>

          <div class="recap-household-member-detail" v-if="Object.keys(getAttrs('client', 'firstName,lastName')).length > 0">
            <div class="recap-detail-name">
              {{ __('Name:', translationID) }}
            </div>
            <ul class="recap-detail-info recap-detail-conditions">
              <li>
                v{ client._attrs.firstName } v{ client._attrs.lastName }
              </li>
            </ul>
          </div><div v-else>

            <p class="text-small">
              {{ __('Name isn\'t filled out <span class="c-red">*</span>', translationID) }}
            </p>

          </div>

          <div class="recap-household-member-detail" v-if="people[0]._attrs.age > 0">
            <div class="recap-detail-name">
              {{ __('Age:', translationID) }}
            </div>
            <ul class="recap-detail-info recap-detail-conditions">
              <li>
                v{ people[0]._attrs.age }
              </li>
            </ul>
          </div><div v-else>

            <p class="text-small">
              {{ __('Age isn\'t filled out <span class="c-red">*</span>', translationID) }}
            </p>

          </div>

          <div class="recap-household-member-detail" v-if="household._attrs.zip !== ''">
            <div class="recap-detail-name">
              {{ __('Zip code:', translationID) }}
            </div>
            <ul class="recap-detail-info recap-detail-conditions">
              <li>
                v{ household._attrs.zip }
              </li>
            </ul>
          </div><div v-else>

            <p class="text-small">
              {{ __('Zip code isn\'t filled out <span class="c-red">*</span>', translationID) }}
            </p>

          </div>

        </div>

        <hr class="screener-divider">

        {# Client Contact #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Client Contact', translationID) }}
            <a class="m-horizontal" data-js="question" href="#question-client-contact" v-on:click="track('Confirmation: Edit', [{'DCS.dcsuri': 'question-client-contact/edit'}])">{{ __('Edit', translationID) }}</a>
          </h3>

          <div class="recap-household-member-detail" v-if="client._attrs.language.length > 0">
            <div class="recap-detail-name">
              {{ __('Language:', translationID) }}
            </div>
            <ul class="recap-detail-info recap-detail-conditions">
              <li v-for="language in client._attrs.language">
                <span v-if="language === 'other'">v{ client._attrs.languageOther }</span>
                <span v-else>v{ localString(language) }</span>
              </li>
            </ul>
          </div><div v-else>

            <p class="text-small">
              {{ __('No preferred language selected.', translationID) }}
            </p>

          </div>

          <div class="recap-household-member-detail" v-if="client._attrs.phone !== ''">
            <div class="recap-detail-name">
              {{ __('Phone:', translationID) }}
            </div>
            <ul class="recap-detail-info recap-detail-conditions">
              <li>v{ client._attrs.phone }</li>
              <li>v{ localString(client._attrs.phoneType) }</li>
            </ul>
          </div>

          <div class="recap-household-member-detail" v-if="client._attrs.phoneAlt !== ''">
            <div class="recap-detail-name">
              {{ __('Alternate phone:', translationID) }}
            </div>
            <ul class="recap-detail-info recap-detail-conditions">
              <li>v{ client._attrs.phoneAlt }</li>
              <li>v{ localString(client._attrs.phoneAltType) }</li>
            </ul>
          </div>

          <div v-if="client._attrs.phone === '' && client._attrs.phoneAlt === ''">

            <p class="text-small">
              {{ __('No phone numbers added.', translationID) }}
            </p>

          </div>

          <div class="recap-household-member-detail" v-if="client._attrs.contactTimes.length > 0">
            <div class="recap-detail-name">
              {{ __('Best times to contact:', translationID) }}
            </div>
            <ul class="recap-detail-info recap-detail-conditions">
              <li v-for="time in client._attrs.contactTimes">v{ localString(time) }</li>
            </ul>
          </div><div v-else>

            <p class="text-small">
              {{ __('No contact times selected.', translationID) }}
            </p>

          </div>

          <div class="recap-household-member-detail" v-if="client._attrs.email !== ''">
            <div class="recap-detail-name">
              {{ __('Email:', translationID) }}
            </div>
            <ul class="recap-detail-info recap-detail-conditions">
              <li>v{ client._attrs.email }</li>
            </ul>
          </div><div v-else>

            <p class="text-small">
              {{ __('No email added.', translationID) }}
            </p>

          </div>


          <div class="recap-household-member-detail" v-if="Object.keys(getAttrs('client', addressAttrs)).length > 0">
            <div class="recap-detail-name">
              {{ __('Address:', translationID) }}
            </div>
            <ul class="recap-detail-info recap-detail-conditions">
              <li v-for="(value, key) in getAttrs('client', addressAttrs)" v-if="key != 'streetName'">
                <span v-if="key === 'unit'">Unit # </span>
                <span v-if="key === 'streetNumber'">v{ value } v{ client._attrs.streetName }</span>
                <span v-else>v{ localString(value) }</span>
              </li>
            </ul>
          </div>

        </div>

        <hr class="screener-divider">

        {# Household #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Household:', translationID) }} v{ people.length }
            <span v-if="singleOccupant()">{{ __('person', translationID) }}</span>
            <span v-else>{{ __('people', translationID) }}</span>
            <a class="m-horizontal" href="#question-household-information" data-js="question" v-on:click="track('Confirmation: Edit', [{'DCS.dcsuri': 'question-household-information/edit'}])">{{ __('Edit', translationID) }}</a>
          </h3>

          <div class="m-bottom" v-for="(p, personIndex) in people">

            <div class="m-bottom">
              <personlabel v-bind:index="personIndex" v-bind:person="p._attrs"></personlabel>

              <span v-if="personIndex === 0">
                <a class="btn-text btn-link p-horizontal" href="#question-household-information" data-js="question" v-on:click="track('Confirmation: Edit', [{'DCS.dcsuri': 'question-household-information/edit'}])">{{ __('Edit', translationID) }}</a>
              </span><span v-else>
                <a class="btn-text btn-link p-horizontal" href="#question-household-members" data-js="question" v-on:click="track('Confirmation: Edit', [{'DCS.dcsuri': 'question-household-members/edit'}])">{{ __('Edit', translationID) }}</a>
                <button type="button" class="btn-text btn-link p-horizontal" v-on:click="people.splice(personIndex, 1);track('Confirmation: Edit', [{'DCS.dcsuri': 'remove-household-member/remove'}])">{{ __('Remove', translationID) }}</button>
              </span>
            </div>

            {# conditions #}
            <div class="recap-household-member-detail m-bottom" v-if="Object.keys(getAttrs('people', conditionAttrs, personIndex)).length > 0">
              <div class="recap-detail-name">{{ __('Conditions:', translationID) }}</div>
              <ul class="recap-detail-info recap-detail-conditions">
                <li v-for="(value, key) in getAttrs('people', conditionAttrs, personIndex)">v{ localString(key) }</li>
              </ul>
            </div>

            {# benefits #}
            <div class="recap-household-member-detail m-bottom" v-if="Object.keys(getAttrs('people', benefitAttrs, personIndex)).length > 0">
              <div class="recap-detail-name">{{ __('Benefits:', translationID) }}</div>
              <ul class="recap-detail-info recap-detail-conditions">
                <li v-for="(value, key) in getAttrs('people', benefitAttrs, personIndex)">v{ localString(key) }</li>
              </ul>
            </div>

            {# income #}
            <div class="recap-household-member-detail" v-if="p._attrs.incomes.length > 0">
              <div class="recap-detail-name">{{ __('Income:', translationID) }}</div>
              <ul class="recap-detail-info">
                <li v-for="income in p._attrs.incomes">
                  <div class="recap-detail-info-item">v{ '$' + income.amount }</div>
                  <div class="recap-detail-info-item">v{ localString(income.type) }</div>
                  <div class="recap-detail-info-item">v{ localString(income.frequency) }</div>
                </li>
              </ul>
            </div>

            {# expenses #}
            <div class="recap-household-member-detail" v-if="p._attrs.expenses.length > 0">
              <div class="recap-detail-name">{{ __('Expenses:', translationID) }}</div>
              <ul class="recap-detail-info">
                <li v-for="expense in p._attrs.expenses">
                  <div class="recap-detail-info-item">v{ '$' + expense.amount }</div>
                  <div class="recap-detail-info-item">v{ localString(expense.type) }</div>
                  <div class="recap-detail-info-item">v{ localString(expense.frequency) }</div>
                </li>
              </ul>
            </div>

          </div>

        </div>

        <hr class="screener-divider">

        {# Savings #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Household resources:', translationID) }}
            <span class="force-ltr">v{ '$' + household._attrs.cashOnHand }</span>
            <a class="m-horizontal" href="#question-household-total-savings" data-js="question" v-on:click="track('Confirmation: Edit', [{'DCS.dcsuri': 'question-household-total-savings/edit'}])">{{ __('Edit', translationID) }}</a>
          </h3>

          <p>{{ __('This is cash on hand; checking or savings accounts; stocks, bonds or mutual funds.', translationID) }}</p>

        </div>

        <hr class="screener-divider">

        {# Housing #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Housing', translationID) }}
            <a class="m-horizontal" href="#question-housing-situation" data-js="question" v-on:click="track('Confirmation: Edit', [{'DCS.dcsuri': 'question-housing-situation/edit'}])">{{ __('Edit', translationID) }}</a>
          </h3>

          <ul class="recap-detail-info">
            <li v-for="(value, key) in getAttrs('household', livingAttrs)">

              <p>v{ localString(key) }<span v-if="key === 'livingRenting'">v{ ' (' + localString(household._attrs.livingRentalType) + ')' }</span></p>

              <div class="p-bottom" v-if="key === 'livingRenting'">
                <div class="m-bottom" v-for="(p, personIndex) in people" v-if="p._attrs.livingRentalOnLease">
                  {% spaceless %}
                  <personlabel v-bind:index="personIndex" v-bind:person="p._attrs"></personlabel><span v-if="personIndex === 0">{{ __(', are on the lease', translationID) }}</span><span v-else>{{ __(', is on the lease', translationID) }}</span>
                  {% endspaceless %}
                </div>
              </div>

              <div class="p-bottom" v-if="key === 'livingOwner'">
                <div class="m-bottom" v-for="(p, personIndex) in people" v-if="p._attrs.livingOwnerOnDeed">
                  {% spaceless %}
                  <personlabel v-bind:index="personIndex" v-bind:person="p._attrs"></personlabel><span v-if="personIndex === 0">{{ __(', are an owner', translationID) }}</span><span v-else>{{ __(', is an owner', translationID) }}</span>
                  {% endspaceless %}
                </div>
              </div>

            </li>
          </ul>

        </div>

      </div>

    </div>

  </div>

</fieldset>
