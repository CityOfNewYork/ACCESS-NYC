<fieldset class="d-block w-100 p-bottom">

  <div class="bg-blue-light b-bottom b-4 b-white p-relative" id="question-confirmation">

    <div class="bg-blue-light ui-overlay"></div>

    <div class="p-relative">

      <a class="{{styles.questions}}" href="#question-confirmation">
        {{ __('Is all of your information correct?', 'accessnyc-screener') }}
      </a>

      <div class="p-horizontal-2 p-bottom-2"> {# hidden #}

        {# Categories #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Looking for help with', 'accessnyc-screener') }}
            <a class="m-horizontal" data-js="question" href="#question-client-needs">{{ __('Edit', 'accessnyc-screener') }}</a>
          </h3>

          <div class="recap-program-categories" v-if="categories.length">

            <div class="program-category" v-for="(c, index) in categories">
              <div class="program-icon">
                <span class="icon">
                  <svg v-bind:class="'icon icon-' + c">
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" v-bind:xlink:href="'#icon-' + c"></use>
                  </svg>
                </span>
              </div>
              <div class="program-card-body">v{ localString(c) }</div>
            </div>

          </div><div v-else>

            <p class="text-small">
              {{ __('No categories selected.', 'accessnyc-screener') }}
            </p>

          </div>

        </div>

        <hr class="screener-divider">

        {# Household #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Your household:', 'accessnyc-screener') }} v{ people.length }
            <span v-if="singleOccupant()">{{ __('person', 'accessnyc-screener') }}</span>
            <span v-else>{{ __('people', 'accessnyc-screener') }}</span>
            <a class="m-horizontal" href="#question-household-information" data-js="question">
              {{ __('Edit', 'accessnyc-screener') }}
            </a>
          </h3>

          <div class="m-bottom" v-for="(p, personIndex) in people">

            <div class="m-bottom">
              <personlabel v-bind:index="personIndex" v-bind:person="p._attrs"></personlabel>

              <span v-if="personIndex === 0">
                <a class="btn-text btn-link p-horizontal" href="#question-household-information" data-js="question">
                  {{ __('Edit', 'accessnyc-screener') }}
                </a>
              </span><span v-else>
                <a class="btn-text btn-link p-horizontal" href="#question-household-members" data-js="question">
                  {{ __('Edit', 'accessnyc-screener') }}
                </a>
                <button type="button" class="btn-text btn-link p-horizontal"
                  v-on:click="people.splice(personIndex, 1)">
                  {{ __('Remove', 'accessnyc-screener') }}
                </button>
              </span>
            </div>

            {# conditions #}
            <div class="recap-household-member-detail m-bottom" v-if="Object.keys(getAttrs('people', conditionAttrs, personIndex)).length > 0">
              <div class="recap-detail-name">{{ __('Conditions:', 'accessnyc-screener') }}</div>
              <ul class="recap-detail-info recap-detail-conditions">
                <li v-for="(value, key) in getAttrs('people', conditionAttrs, personIndex)">v{ localString(key) }</li>
              </ul>
            </div>

            {# benefits #}
            <div class="recap-household-member-detail m-bottom" v-if="Object.keys(getAttrs('people', benefitAttrs, personIndex)).length > 0">
              <div class="recap-detail-name">{{ __('Benefits:', 'accessnyc-screener') }}</div>
              <ul class="recap-detail-info recap-detail-conditions">
                <li v-for="(value, key) in getAttrs('people', benefitAttrs, personIndex)">v{ localString(key) }</li>
              </ul>
            </div>

            {# income #}
            <div class="recap-household-member-detail" v-if="p._attrs.incomes.length > 0">
              <div class="recap-detail-name">{{ __('Income:', 'accessnyc-screener') }}</div>
              <ul class="recap-detail-info">
                <li v-for="income in p._attrs.incomes">
                  <div class="recap-detail-info-item">v{ '$' + income.amount }</div>
                  <div class="recap-detail-info-item">v{ localString(income.type) }</div>
                  <div class="recap-detail-info-item">v{ localString(income.frequency) }</div>
                </li>
              </ul>
            </div>

            {# expenses #}
            <div class="recap-household-member-detail" v-if="p._attrs.expenses.length > 0">
              <div class="recap-detail-name">{{ __('Expenses:', 'accessnyc-screener') }}</div>
              <ul class="recap-detail-info">
                <li v-for="expense in p._attrs.expenses">
                  <div class="recap-detail-info-item">v{ '$' + expense.amount }</div>
                  <div class="recap-detail-info-item">v{ localString(expense.type) }</div>
                  <div class="recap-detail-info-item">v{ localString(expense.frequency) }</div>
                </li>
              </ul>
            </div>

          </div>

        </div>

        <hr class="screener-divider">

        {# Savings #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Household resources:', 'accessnyc-screener') }}
            <span class="force-ltr">v{ '$' + household._attrs.cashOnHand }</span>
            <a class="m-horizontal" href="#question-household-total-savings" data-js="question">{{ __('Edit', 'accessnyc-screener') }}</a>
          </h3>

          <p>{{ __('This is cash on hand; checking or savings accounts; stocks, bonds or mutual funds.', 'accessnyc-screener') }}</p>

        </div>

        <hr class="screener-divider">

        {# Housing #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Housing', 'accessnyc-screener') }}
            <a class="m-horizontal" href="#question-housing-situation" data-js="question">{{ __('Edit', 'accessnyc-screener') }}</a>
          </h3>

          <ul class="recap-detail-info">
            <li v-for="(value, key) in getAttrs('household', livingAttrs)">

              <div class="recap-detail-info-item">v{ localString(key) }<span v-if="key === 'livingRenting'">v{ ' (' + localString(household._attrs.livingRentalType) + ')' }</span></div>

              <div class="m-bottom" v-for="(p, personIndex) in people" v-if="key === 'livingRenting' && p._attrs.livingRentalOnLease">
                <personlabel v-bind:index="personIndex" v-bind:person="p._attrs"></personlabel>
                <span v-if="personIndex === 0">
                  {{ __(', are on the lease', 'accessnyc-screener') }}
                </span><span v-else>
                  {{ __(', is on the lease', 'accessnyc-screener') }}
                </span>
              </div>

              <div class="m-bottom" v-for="(p, personIndex) in people" v-if="key === 'livingOwner' && p._attrs.livingOwnerOnDeed">
                <personlabel v-bind:index="personIndex" v-bind:person="p._attrs"></personlabel>
                <span v-if="personIndex === 0">
                  {{ __(', are an owner', 'accessnyc-screener') }}
                </span><span v-else>
                  {{ __(', is an owner', 'accessnyc-screener') }}
                </span>
              </div>

            </li>
          </ul>

        </div>

        <hr class="screener-divider">

        {# Zip Code #}
        <div>

          <h3 class="{{ styles.labels }}">
            {{ __('Your zip code:', 'accessnyc-screener') }} v{ household._attrs.zip }
            <a class="m-horizontal" href="#question-client-basics" data-js="question">{{ __('Edit', 'accessnyc-screener') }}</a>
          </h3>

        </div>

      </div>

    </div>

  </div>

</fieldset>
