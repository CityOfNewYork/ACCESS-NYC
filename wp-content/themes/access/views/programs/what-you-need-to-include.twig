<section id="what-you-need-to-include" data-js="program-detail-step" class="hidden:overflow{% if step in sectionArray | keys %} active{% endif %} print:active">
  <header>
    <h3 class="text-color-blue-dark">
      {{ stepNumber }}. {{__('What you need to include', 'accessnyc-program-detail')}}
    </h3>
  </header>

  {{ post.get_field('what_you_need_to_include_intro_text') }}

  {% for item in post.get_field('what_you_need_to_include') %}
    {% include 'components/accordion.twig' with {
      this: {
        id: 'what-you-need-to-include-' ~ loop.index,
        active: (loop.index == 1) ? true : false,
        header: item.heading,
        body: item.body
      }
    } only %}
  {% endfor %}

  {% if nextStep != '' %}
  {% include 'programs/next-button.twig' %}
  {% endif %}
</section>
