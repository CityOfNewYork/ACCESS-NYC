<section id="how-it-works" data-js="program-detail-step" class="hidden:overflow{% if step == '' or step in sectionArray | keys %} active{% endif %} print:active">
  <header>
    <h3 class="text-color-blue-dark">
      {{ stepNumber }}. {{__('How it Works', 'accessnyc-program-detail')}}
    </h3>
  </header>

  <div class="type-exposition">
    {{ post.get_field('program_description') }}
  </div>

  {% if post.heads_up | length %}
  <div id="how-it-works" class="c-checklist">
    {{ post.get_field('heads_up') }}
  </div>
  <style>
    {% for icon in post.get_field('heads_up_icons') %}
    #how-it-works.c-checklist > ul > li:nth-child({{ loop.index }}) {
      background-image: url({{ icon.icon.url }});
    }
    {% endfor %}
  </style>
  {% endif %}

  {% if nextStep != '' %}
  {% include 'programs/next-button.twig' %}
  {% endif %}

  <div class="program-related-categories">
    <h4>{{__('Related', 'accessnyc-program-detail')}}</h4>
    {% for category in post.terms(['programs', 'populations-served']) %}
      {% if category.taxonomy == 'populations-served' %}
        {% set urlParam = 'pop_served' %}
      {% elseif category.taxonomy == 'page-type' %}
        {% set urlParam = 'page_type' %}
      {% else %}
        {% set urlParam = 'program_cat' %}
      {% endif %}
      <a class="btn btn-primary btn-tag btn-small" href="../?{{ urlParam }}={{ category.slug }}">{{ category.name }}</a>
    {% endfor %}
  </div>

  <div class="hidden print:block" aria-hidden="true">
    <h3>{{__('More ways to get help with this program', 'accessnyc-program-detail')}}</h3>
    <div>
      {# Gets all the current help method fields and creates an array to be iterated below #}
      {% set helpMethods = [
        'get_help_online',
        'get_help_by_email',
        'get_help_by_calling_311',
        'get_help_by_calling_other_than_311',
        'get_help_in_person'
      ] %}

      {% for method in helpMethods %}
      {% if post.get_field(method) %}
      <div {# class="help-method-{{method}}" #}>
        {{ post.get_field(method) }}
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
